# General keybinds {{{
    keybind = clear
    keybind = ctrl+v=paste_from_clipboard
    keybind = ctrl+shift+physical:comma=reload_config
    keybind = ctrl+shift+physical:i=inspector:toggle
# }}}

# Font keybinds {{{
    keybind = ctrl+shift+physical:equal=increase_font_size:1
    keybind = ctrl+shift+physical:minus=decrease_font_size:1
    keybind = ctrl+shift+physical:zero=reset_font_size
# }}}

# Surface keybinds {{{
    # Close current split -> tab -> window
        keybind = ctrl+shift+physical:w=close_surface

    # Split keybinds {{{
        keybind = ctrl+shift+physical:s=new_split:auto

        keybind = ctrl+shift+left=resize_split:left,20
        keybind = ctrl+shift+down=resize_split:down,20
        keybind = ctrl+shift+up=resize_split:up,20
        keybind = ctrl+shift+right=resize_split:right,20
        keybind = ctrl+shift+enter=equalize_splits

        keybind = ctrl+shift+physical:h=goto_split:left
        keybind = ctrl+shift+physical:j=goto_split:bottom
        keybind = ctrl+shift+physical:k=goto_split:top
        keybind = ctrl+shift+physical:l=goto_split:right
    # }}}

    # Tab keybinds {{{
        keybind = ctrl+shift+tab=next_tab
        keybind = ctrl+shift+physical:t=new_tab
    # }}}

    # Window keybinds {{{
        keybind = ctrl+shift+physical:n=new_window
    # }}}
# }}}
