{
    "layer": "top",
    "position": "top",
    "mode": "dock",

    "margin": "1 0",
    "height": 35,

    "reload_style_on_change": true,
    "exclusive": true,
    "passthrough": false,

    "modules-left": [
        "custom/l_end",
        "group/wlogout",
        "custom/r_end",
        "custom/l_end",
        "group/time",
        "custom/r_end",
        "custom/l_end",
        "group/desktops",
        "custom/r_end"
    ],

    "modules-center": [
        "custom/padding",
        "custom/l_end",
        "group/windows",
        "custom/r_end",
        "custom/padding"
    ],

    "modules-right": [
        "custom/padding",
        "custom/l_end",
        "group/hardware",
        "custom/r_end",
        "custom/l_end",
        "group/software",
        "custom/r_end"
    ],

    /* POWER BUTTON */
    "group/wlogout": {
        "orientation": "inherit",
        "drawer": {
            "transition-left-to-right": true
        },

        "modules": [
            "custom/power",
            "custom/suspend",
            "custom/reboot",
            "custom/logout",
            "custom/lock"
        ]
    },

    "custom/power": {
        "format": "<span size='13pt'>ÔÄë</span>",
        "tooltip-format": "power off",
        "on-click": "systemctl poweroff"
    },

    "custom/suspend": {
        "format": "<span size='13pt'>Û∞è¶</span>",
        "tooltip-format": "suspend",
        "on-click": "systemctl suspend"
    }, 

    "custom/reboot": {
        "format": "üóò",
        "tooltip-format": "reboot",
        "on-click": "systemctl reboot"
    },

    "custom/logout": {
        "format": "<span size='11pt'>Û∞çÉ</span>",
        "tooltip-format": "logout",
        "on-click": "hyprctl dispatch exit"
    },

    "custom/lock": {
        "format": "<span size='13pt'>Û∞∑õ</span>",
        "tooltip-format": "lock",
        "on-click": "hyprlock"
    },

    /* CLOCK TRAY */
    "group/time": {
        "orientation": "inherit",

        "modules": [
            "idle_inhibitor",
            "clock",
            "custom/weather"
        ]
    },

    "idle_inhibitor": {
        "format": "{icon}",

        "format-icons": {
            "activated": "<span size='13pt'>Û±´û</span>",
            "deactivated": "<span size='13pt'>Û∞îõ</span>"
        }
    },

    "clock": {
        "interval": 1,
        "format": "{:%T | <span size='11pt'>Û∞É≠</span> %A, %d¬∑%m¬∑%y}",
        "tooltip-format": "{calendar}",

        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",

            "format": {
                "months": "<span color='#f9e2af'><b>{}</b></span>",
                "weekdays": "<span color='#fab387'><b>{}</b></span>",
                "today": "<span color='#f38ba8'><b>{}</b></span>"
            }
        },

        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "custom/weather": {
        "exec": "get-weather Porto-Alegre; curl wttr.in/Porto-Alegre > $HOME/.weather",
        "return-type": "json",
        "interval": 1800,
        "format": "{}",
        "on-click": "ghostty -e curl wttr.in/Porto-Alegre",
        "tooltip": true
    },

    /* WORKSPACES TRAY */
    "group/desktops": {
        "orientation": "inherit",

        "modules": [
            "hyprland/workspaces",
            "tray"
        ]
    },

    "hyprland/workspaces": {
    },

    "tray": {
        "icon-size": 18,
        "spacing": 5
    },

    /* WINDOW TRAY */
    "group/windows": {
        "orientation": "inherit",

        "modules": [
            "hyprland/window"
        ]
    },

    "hyprland/window": {
        "icon": true,
        "icon-size": 20,
        "tooltip": false
    },

    /* HARDWARE TRAY */
    "group/hardware": {
        "orientation": "inherit",

        "modules": [
            "cpu",
            "memory",
            "disk"
        ]
    },

    "cpu": {
        "interval": 10,
        "format": "<span size='11pt'>Ó∞ô</span> {usage}%",
        "on-click": "ghostty -e btop",

        "states": {
            "low": 0,
            "medium": 50,
            "high": 80
        }
    },

    "memory": {
        "interval": 10,
        "format": "<span size='11pt'>Û∞æÜ</span> {percentage}%",
        "on-click": "ghostty -e btop",

        "states": {
            "low": 0,
            "medium": 50,
            "high": 80
        }
    },

    "disk": {
        "interval": 10,
        "format": "<span size='11pt'>ÔÇ†</span> {used} ({percentage_used}%)",
        "on-click": "org.gnome.baobab",

        "states": {
            "low": 0,
            "medium": 50,
            "high": 80
        }
    },

    /* SOFTWARE TRAY */
    "group/software": {
        "orientation": "inherit",

        "modules": [
            "backlight",
            "network",
            "wireplumber",
            "pulseaudio#microphone",
            "custom/notification"
        ]
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "<span size='10pt'>{icon}</span> {percent}%",
        "tooltip": false,
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "network": {
        "interval": 2,
        "tooltip": true,
        "format-wifi": "<span size='11pt'>Ôá´</span>",
        "rotate": 0,
        "format-ethernet": "<span size='10pt'>Û∞àÄ</span>",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ ",
        "tooltip-format-disconnected": "Disconnected",
        "format-alt": "<span foreground='#99ffdd'><span size='13pt'>ÔÄô</span> {bandwidthDownBytes}</span> <span foreground='#ffcc66'><span size='13pt'>ÔÇì</span> {bandwidthUpBytes}</span>",
        "on-click-right": "nm-connection-editor"
    },

    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôö©  off",
        "tooltip": false,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol -t 3",

        "states": {
            "high": 51
        },

        "scroll-step": 5,

        "format-icons": {
            "headphones": "ÔÄ•",
            "default": ["Û∞ïø", "<span size='10pt'>Û∞ñÄ</span>", "<span size='10pt'>Û∞ïæ</span>"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "<span size='9pt'>Û∞ç¨</span> {volume}%",
        "format-source-muted": "<span size='10pt'>Û∞ç≠</span> off",
        "tooltip": false,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
        "on-click-right": "pavucontrol -t 4",
        "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +5%",
        "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -5%"
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",

        "format-icons": {
            "notification": "Û±Ö´<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "Û∞Çö",
            "dnd-notification": "Û∞Çõ<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Û∞Çõ",
            "inhibited-notification": "Û∞Çö<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "Û∞Çö",
            "dnd-inhibited-notification": "Û±èß<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Û±èß"
        },

        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

    /* CUSTOM ENDS */
    "custom/padding": {
        "format": "  ",
        "interval": "once",
        "tooltip": false
    },

    "custom/r_end": {
        "format": " ",
        "interval": "once",
        "tooltip": false
    },

    "custom/l_end": {
        "format": " ",
        "interval": "once",
        "tooltip": false
    }
}
